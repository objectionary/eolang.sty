    if (exists $opts{'data'}) {
      print ',phi-data';
      if (not $opts{'data'} eq '') {
        my $d = $opts{'data'};
        if (index($d, '|') == -1) {
          $d = '$\Delta\phiDotted\text{\textnormal{\texttt{' . $d . '}}}$';
        }
        $opts{'box'} = $d;
      }
